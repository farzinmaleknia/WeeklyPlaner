    private async Task<DateTime> FindWednsday(DateTime day, bool isNextWed = false)
    {
        if (isNextWed)
        {
            while (day.DayOfWeek.ToString() != "Wednesday")
            {
                day = day.AddDays(1);
            }
        }
        else
        {
            while (day.DayOfWeek.ToString() != "Wednesday")
            {
                day = day.AddDays(-1);
            }            
        }

        return day;
    }

